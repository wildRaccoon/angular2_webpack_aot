{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "outDir": ".compiled",

    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@a_package" : [ "src/modules/package/index.ts" ],
      "@a_package/*" : [ "src/modules/package/*" ]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode",
    ".aot",
    "dist",
    ".compiled"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "silent":true
  },
  "compileOnSave": false,
  "buildOnSave": false  
}
